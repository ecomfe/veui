{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "declaration-empty-line-before": null,
    "no-descending-specificity": null,
    "no-empty-source": null,
    "number-leading-zero": "always",
    "declaration-colon-newline-after": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "plugin"
        ]
      }
    ],
    "string-quotes": [
      "double",
      {
        "avoidEscape": true
      }
    ]
  },
  "ignoreFiles": ["**/*.js"]
}
